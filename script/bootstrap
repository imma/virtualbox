#!/usr/bin/env bash

function bootstrap {
  local shome="$(cd -P -- "${BASH_SOURCE%/*}/.." && pwd -P)"
  source "$shome/script/profile"

  case "$(uname -s)" in
    Darwin)
      block compile dmg \
        'http://download.virtualbox.org/virtualbox/5.1.12/VirtualBox-5.1.12-112440-OSX.dmg' \
        'VirtualBox' 'VirtualBox.pkg'
      ;;
    Linux)
      sudo apt-key add "$shome/etc/virtualbox.gpg"
      source /etc/lsb-release
      echo "deb http://download.virtualbox.org/virtualbox/debian ${DISTRIB_CODENAME} contrib" | sudo tee /etc/apt/sources.list.d/virtualbox.list
      sudo -E aptitude update
      sudo -E aptitude install -y dkms virtualbox-5.1
      ;;
  esac

  local fnm_ext='Oracle_VM_VirtualBox_Extension_Pack-5.1.14-112924.vbox-extpack'
  cache curl "$fnm_ext" 'http://download.virtualbox.org/virtualbox/5.1.14/Oracle_VM_VirtualBox_Extension_Pack-5.1.14-112924.vbox-extpack'
  sudo VBoxManage extpack install --replace "${CACHE_DIR}/curl/$fnm_ext"
}

bootstrap
